{
  "name": "templ-node",
  "version": "0.0.1",
  "description": "Node Project Template",
  "main": "src/index.ts",
  "scripts": {
    "depcruise": "depcruise --config .dependency-cruiser.js src",
    "doc:watch": "nodemon --exec 'npm run doc'",
    "docs": "documentation build src/** -f html -o docs; documentation build src/** -f json -o docs.tson",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run jscpd && npm run depcruise && npm run test",
    "inspector": "jsinspector server --port 9543",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "jscpd": "jscpd ./src --blame --format typescript",
    "lint:log": "npm run lint -- -f json -o .eslint-output.tson",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "lint:write": "npm run lint -- --fix",
    "lint": "eslint ./{src,test}/**/*.ts",
    "predocs": "rimraf docs",
    "prerelease": "npm run build",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "prettier": "prettier ./{src,test}/**/*.ts",
    "release": "release-it --ci --no-npm.publish",
    "sonar": "sonar-scanner",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:single": "cross-env NODE_ENV=test nyc --reporter=html --reporter=lcov --reporter=text --extension .ts mocha --forbid-only",
    "test:watch": "nodemon --exec 'npm run test'",
    "test": "npm run test:single -- './test/**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/node-typescript.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/templ-project/node-typescript/issues"
  },
  "homepage": "https://github.com/templ-project/node#readme",
  "devDependencies": {
    "@babel/cli": "",
    "@babel/core": "",
    "@babel/node": "",
    "@babel/preset-env": "",
    "@babel/register": "",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@jscpd/badge-reporter": "^3.3.23",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^9.25.1",
    "documentation": "^13.2.4",
    "enquirer": "^2.3.6",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sonar": "^0.5.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "husky": "^4.3.8",
    "import-sort-style-module": "^6.0.0",
    "jscpd": "^3.3.25",
    "jsinspector": "^2.0.4",
    "mocha": "^8.3.2",
    "mocha-junit-reporter": "^2.0.0",
    "node-ts": "^5.1.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "release-it": "^14.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.4",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "sonarqube-scanner": "^2.8.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run git-hook:pre-commit"
    }
  },
  "importSort": {
    "js, .jsx, .ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
